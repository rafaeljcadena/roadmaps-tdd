<div class="card">
  <div class="card-header">
    <h2><%= t('helpers.submit.general.show', model: t('activerecord.models.category.one')) %></h2>

    <ul class="actions">
      <li>
        <%= link_to categories_path, title: t('activerecord.link.back_to_list') do %>
            <i class="zmdi zmdi-arrow-left"></i>
        <% end %>
      </li>
      <li>
          <a href="" title="<%= t('Refresh') %>">
              <i class="zmdi zmdi-refresh-alt"></i>
          </a>
      </li>
      <li>
				<%= link_to edit_category_path(@category), title: t('Edit') do %>
            <i class="zmdi zmdi-edit"></i>
        <% end if can? :edit, @category %>
      </li>
    </ul>
  </div>
  <div class="card-body card-padding">
      <div class="row">
        <div class="col-xs-12">
          <label class="fg-label"><%= t('activerecord.attributes.category.name') %></label><br/>&nbsp;
          <%= @category.name %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <label class="fg-label"><%= t('activerecord.attributes.category.created_at') %></label><br/>&nbsp;
          <%= @category.created_at %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-12">
          <label class="fg-label"><%= t('activerecord.attributes.category.updated_at') %></label><br/>&nbsp;
          <%= @category.updated_at %>
        </div>
      </div>
  </div>
</div>
