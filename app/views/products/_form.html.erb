<%= semantic_form_for @product do |f| %>
  <%= f.inputs do %>
    
    <div class="row">
      <div class="col-xs-12">
        <%= f.input :name %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-12">
        <%= f.input :price %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-12">
        <%= f.input :status %>
      </div>
    </div>
    
    <div class="row">
      <div class="col-xs-12">
        <%= f.input :category %>
      </div>
    </div>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, label: "Salvar", :as => :button, :button_html => { class: "btn btn-primary btn-sm m-t-10 waves-effect" } %>
  <% end %>
<% end %>
